---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";

import { type GithubInterface } from "githubInterface";
import { getGithubInformation } from "src/content/getRepos";

const routeNames: GithubInterface[] =
  await getGithubInformation();
---

<BaseLayout
  title="Projects"
  sideBarActiveItemID="projects"
>
  <div>
    <div class="text-3xl w-full font-bold mb-5">
      Projects Header
    </div>
  </div>

  <HorizontalCard
    title={routeNames[0].name}
    img="/post_img.webp"
    desc={routeNames[0].description}
    url={routeNames[0].htmlURL}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title={routeNames[1].name}
    img="/post_img.webp"
    desc={routeNames[1].name}
    url={routeNames[1].htmlURL}
  />
  <!-- 
  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Projects Header</div>
  </div> -->
  <div class="divider my-0"></div>

  <HorizontalCard
    title={routeNames[2].name}
    img="/post_img.webp"
    desc={routeNames[2].description}
    url={routeNames[2].htmlURL}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title={routeNames[3].name}
    img="/post_img.webp"
    desc={routeNames[3].description}
    url={routeNames[3].htmlURL}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title={routeNames[4].name}
    img="/post_img.webp"
    desc={routeNames[4].description}
    url={routeNames[4].htmlURL}
  />
</BaseLayout>
