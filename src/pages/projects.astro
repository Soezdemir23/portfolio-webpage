---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";

import { type GithubInterface } from "githubInterface";
import { getGithubInformation } from "getRepos";

const routeNames: GithubInterface[] =
  await getGithubInformation();
---

<BaseLayout
  title="Projects"
  sideBarActiveItemID="projects"
>
  <div>
    <div class="text-3xl w-full font-bold mb-5">
      Projects Header
    </div>
  </div>

  <HorizontalCard
    title={routeNames[0].name}
    img={routeNames[0].screenshot === undefined
      ? "/post_img.png"
      : routeNames[0].screenshot}
    desc={routeNames[0].description === undefined
      ? "No description available"
      : routeNames[0].description}
    url={routeNames[0].htmlURL}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title={routeNames[1].name}
    img={routeNames[1].screenshot === undefined
      ? "/post_img.png"
      : routeNames[1].screenshot}
    desc={routeNames[1].description === undefined
      ? "No description available"
      : routeNames[1].description}
    url={routeNames[1].htmlURL}
  />
  <!-- 
  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Projects Header</div>
  </div> -->
  <div class="divider my-0"></div>

  <HorizontalCard
    title={routeNames[2].name}
    img={routeNames[2].screenshot === undefined
      ? "/post_img.png"
      : routeNames[2].screenshot}
    desc={routeNames[2].description === undefined
      ? "No description available"
      : routeNames[2].description}
    url={routeNames[2].htmlURL}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title={routeNames[3].name}
    img={routeNames[3].screenshot === undefined
      ? "/post_img.png"
      : routeNames[3].screenshot}
    desc={routeNames[3].description === undefined
      ? "No description available"
      : routeNames[3].description}
    url={routeNames[3].htmlURL}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title={routeNames[4].name}
    img={routeNames[4].screenshot === undefined
      ? "/post_img.png"
      : routeNames[4].screenshot}
    desc={routeNames[4].description === undefined
      ? "No description available"
      : routeNames[4].description}
    url={routeNames[4].htmlURL}
  />
</BaseLayout>
 getRepos
